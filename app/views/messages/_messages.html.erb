<h4>Messages</h4>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Message</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% locals[:ride_request].messages.each do |message| %>
      <tr>
        <td><%= (message.user_id == current_user.id) ? "You:" : "Them:"  %></td>
        <td><b><%= message.body %></b></td>
        <td><%= message.created_at %></td>
        <td><%= link_to 'Delete', [@listing, @ride_request, message ], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= simple_form_for([locals[:listing], locals[:ride_request], Message.new ]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :body, :label=>"Type a message" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send!"%>
  </div>
<% end %>
