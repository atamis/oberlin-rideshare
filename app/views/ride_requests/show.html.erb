<p id="notice"><%= notice %></p>

<p>
  <strong>Requested at:</strong>
  <%= @ride_request.created_at %>
</p>

<p>
  <strong>State:</strong>
  <%= @ride_request.state %>
</p>
</br>
<h4>Messages</h4>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Message</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= (message.user_id == current_user.id) ? "You:" : "Them:"  %></td>
        <td><b><%= message.body %></b></td>
        <td><%= message.created_at %></td>
        <td><%= link_to 'Delete', [@listing, @ride_request, message ], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= simple_form_for([@listing, @ride_request, Message.new ]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :body %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>






<%= link_to 'Edit', edit_listing_ride_request_path(@listing, @ride_request) %> |
<%= link_to 'Back', listing_ride_requests_path(@listing) %>
