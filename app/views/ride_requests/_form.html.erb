<%= simple_form_for([ @listing, @ride_request ]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :listing_id %>
    <%= f.input :user_id %>
    <%= f.input :state, :as => :select, :collection => RideRequest.states.keys.to_a, include_blank: false %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
